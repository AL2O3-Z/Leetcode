class Solution {
public:
    int maxScore(vector<int>& cardPoints, int k) {
        int n = cardPoints.size();
        vector<int> sum(n + 1, 0);
        for(int i = 1; i <= n; i++){
            sum[i] = sum[i - 1] + cardPoints[i - 1];
        }
        //to take the minimum sum in the window
        int minV = INT_MAX;
        for(int i = 0; i <= k; i++){
            minV = min(minV, sum[n - k + i] - sum[i]);
        }
        return sum.back() - minV;
    }
};
