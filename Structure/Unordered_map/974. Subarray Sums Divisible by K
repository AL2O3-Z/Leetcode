//Prefix sum + hashmap
class Solution {
public:
    int subarraysDivByK(vector<int>& A, int k) {
        unordered_map<int,int> m;
        m[0] = 1;
        int sum = 0;
        int res = 0;
        for(int i = 0; i < A.size(); i++){
            sum += A[i];
            if(m.count((sum % k + k )% k)){
                //Negative element after mod.
                res += m[(sum % k + k )% k];
            }
            m[(sum % k + k )% k] ++;
        }
        return res;
    }
};
