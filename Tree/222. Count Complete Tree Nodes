int countNodes(TreeNode* root) {
        if(!root) return 0;
        int hl = 0, hr = 0;
        TreeNode* l = root;
        TreeNode* r = root;
        while(l) {
            hl++;
            l = l->left;
        }
        while(r){
            hr++;
            r = r ->right;
        }
        if(hr == hl) return (1 << hl) - 1;
        return 1 + countNodes(root->left) + countNodes(root->right);
    }
